<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2dp"
    android:background="@drawable/item_character_bg">

    <TextView
        android:id="@+id/comicNameTv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:padding="5dp"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/comicThumbnailIV"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Iron Man" />

    <ImageView

        android:id="@+id/comicThumbnailIV"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:background="@drawable/item_character_bg"
        android:padding="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@color/cardview_dark_background" />

    <TextView
        android:id="@+id/comicDescriptionTv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="5dp"
        android:textColor="#9A6E9A"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/comicThumbnailIV"
        app:layout_constraintTop_toBottomOf="@+id/comicNameTv"
        tools:text="Description" />

</androidx.constraintlayout.widget.ConstraintLayout>