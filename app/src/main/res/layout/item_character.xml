<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:background="@drawable/item_character_bg"
    android:elevation="10dp">

    <TextView
        android:id="@+id/characterNameTv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/crimson_text_semibold"
        android:padding="10dp"
        android:textColor="@color/white"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/thumbnailCv"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Iron Man" />

    <androidx.cardview.widget.CardView
        android:id="@+id/thumbnailCv"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:padding="3dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@color/cardview_dark_background">


        <ImageView
            android:id="@+id/thumbnailIV"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:src="@color/cardview_dark_background" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/descriptionTv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fontFamily="@font/crimson_text_regular"
        android:paddingHorizontal="10dp"
        android:textColor="#C9CDE4"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/thumbnailCv"
        app:layout_constraintTop_toBottomOf="@+id/characterNameTv"
        tools:text="Description" />

</androidx.constraintlayout.widget.ConstraintLayout>