<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10dp"
    android:background="@drawable/item_character_recommended_bg">

    <androidx.cardview.widget.CardView
        android:id="@+id/recommendedCharacterThumbnailCv"
        android:layout_width="100dp"
        android:layout_height="150dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/recommendedCharacterThumbnailIv"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:background="@color/cardview_dark_background" />
    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/recommendedCharacterNameTv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/crimson_text_semibold"
        android:padding="10dp"
        android:textColor="@color/white"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/recommendedCharacterThumbnailCv"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Title" />

    <TextView
        android:id="@+id/recommendedCharacterDescTv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fontFamily="@font/crimson_text_regular"
        android:padding="10dp"
        android:textColor="#C9CDE4"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/recommendedCharacterNameTv"
        app:layout_constraintStart_toStartOf="@+id/recommendedCharacterNameTv"
        app:layout_constraintTop_toBottomOf="@+id/recommendedCharacterNameTv"
        tools:text="Description" />


</androidx.constraintlayout.widget.ConstraintLayout>